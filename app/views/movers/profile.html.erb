
<div class="jumbotron">
  <div class="profile container">
    <h1 class="headline"><%= "#{@mover.first_name}" + " #{@mover.last_name}'s" + " Profile"%></h1>

    <div class="col-md-4 text-center">
      <div class="avatar"><%= image_tag @mover.avatar.url(:medium) %></div>
    </div>


    <div class="col-md-4 text-center">
      <h2><%= "About: " + "#{@mover.first_name}"%></h2>
      <h3><%="username: " + "#{@mover.user_name}"%></h3>
      <h3><%= "Is available in" + " #{@mover.service_area}" %></h3>

      <% if @mover.truck_available == true %>
      <h3>I have a truck!<h3>
        <% else %>
        <h3>I don't have a truck<h3>
          <%end%>

          <h3><%= "#{@mover.first_name}'s" + " Bio"%></h3>

          <p><%= @mover.bio %></p>

          <div><%= link_to "Hire" + " #{@mover.first_name}", root_path, class: 'btn btn-success btn-lg'%>
          </div>
        </div>


        <div class="col-md-4 text-center">
          <div style="text-center">
            <h2><%= "#{@mover.first_name}'s" + " Reviews" %></h2>
            <%@reviews.each do |mover_review|%>
            <!-- want userz=true because we want reviews about users  -->
            <%if mover_review.mover_id == @mover.id && !mover_review.userz?%>
            <p><i class="fa fa-comments fa-lg"></i> <%= mover_review.body%><p>
            <%end%>
            <%end%>

            <div class="comment-form">
                <%= form_for [@mover.reviews.new] do |f| %>
                <%= f.hidden_field :mover_id %><br>
                <%= f.text_field :body, placeholder: 'Add a comment...' %>
                <%= f.button :submit, class: "btn-xs btn btn-success"  %>
                <% end %>
              </div>
          </div>
        </div>

      </div>
    </div>
