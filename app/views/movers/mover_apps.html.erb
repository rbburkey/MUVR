<div class="jumbotron">
  <div class="container">
    <div class="jobappwindow">
      <h1><i class="fa fa-file-text fa-lg"></i>  Your applications</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">

          <% @jobapps.each do |movers_app| %>
          <%if movers_app.accepted? && movers_app.not_accepted? %>
          <h2>Hired!</h2>
          <p><%="#{movers_app.user.first_name.capitalize}" + " has hired you for moving help!"%></p>
          <%elsif !movers_app.accepted? && !movers_app.not_accepted? %>
          <h3>Current Status</h3>
          <p><%="Your application for " + " #{movers_app.user.first_name.capitalize}" + "\'s" + " job is still pending." %></p>
          <%else%>
          <% end %>
          <% end %>
        </div>

      </div>

      </div>
    </div>
  </div>
</div>
