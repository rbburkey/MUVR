<div class="jumbotron">
  <div class="container">
    <div class="jobappwindow">
      <h1>Your application</h1>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">

          <%= form_for [@job, @jobapp] do |f| %>

            <% if @jobapp.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@jobapp.errors.count, "error") %> prohibited this jobapp from being saved:</h2>

                <ul>
                <% @jobapp.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.text_field :message, class: "form-control", placeholder: "Message" %>
            </div>

            <div class="actions">
              <%= f.submit class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>

      </div>

      </div>
    </div>
  </div>
</div>
