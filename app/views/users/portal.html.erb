    <div class="column">
      <h4><%= jobs.name %></h4>
      <h3><%= "Located in: " + "#{jobs.area}"%></h3>
      <div class="image"><%= image_tag jobs.image.url(:medium) %></div>
      <%= link_to "Manage", job_path(jobs), class: "btn btn-warning"%>
