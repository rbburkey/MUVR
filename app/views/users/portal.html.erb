<div class="jumbotron">
  <div class="profile container">
    <%= image_tag @user.avatar.url(:medium) %>
    <h1><%= "#{@user.username}'s" + " Portal"  %></h1>
    <p>This is a template for a simple marketing or informational website. </p>
    <div style="text-align: center"><%= link_to "Create Job", new_job_path, class: 'btn btn-primary btn-lg'%></div>
      <p><%= link_to "#{m.email}" , :controller => "/movers", :action => "profile", :id => m.id, class: 'btn btn-success btn-lg' %></p>
    <div style="text-align: center">
      <h2>Jobs in my Area</h2>
      <% @jobs.each do |job| %>
        <p><%= job.name %></p>
      <% end %>
    </div>
    <div style="text-align: center">
      <h2>Your Reviews</h2>
    <%@reviews.each do |user_review|%>
    <!-- want userz=false because we want reviews about movers posted by this user -->
    <%if user_review.user_id == current_user.id && !user_review.userz?%>
    <%= user_review.title%>
    <%= user_review.body%>
    <%= user_review.user_id%>
    <%= user_review.userz%>
    <%end%>
    <%end%>
    </div>
  </div>
</div>
