        <%= user_review.user_id%>
        <%= user_review.userz%>
        <%end%>
        <%end%>
      </div>

    </div>

<div class="profile container">
  <h1><%= "#{@user.first_name}'s" + " Jobs"%></h1>
  <%@jobs.each do |jobs|%>
