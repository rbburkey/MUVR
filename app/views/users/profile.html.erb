<div class="jumbotron">
  <div class="profile container">

    <h1><%= "#{@user.email}'s" + " Profile"  %></h1>

    <div align="center">
      <p>
        <!-- this wont work if a mover is signed in -->

      </p><br> -->
      <div style="text-align: center"><%= link_to "Account Settings", edit_user_registration_path, class: 'btn btn-primary btn-lg'%></div>
    </div>
  </div>
</div>

<!-- This will list out jobs -->
<table class="table table-hover">
  <tr>
    <th>Job Name</th>
    <th>Description</th>
    <th>Area</th>
  </tr>
  <%@user.jobs.each do |jobz|%>
  <tr>
    <td>
      <%=jobz.name%>
    </td>
    <td>
      <%=jobz.description%>
    </td>
    <td>
      <%=jobz.area%></td>
  </tr>
  <%end%>

</table>

<%@reviews.each do |user_review|%>
<!-- want userz=true because we want reviews about user  -->
<%if user_review.user_id == @user.id && user_review.userz?%>
<%= user_review.title%>
<%= user_review.body%>
<%= user_review.user_id%>
<%= user_review.userz%>
<%end%>
<%end%>
