<div class="jumbotron">
  <div class="profile container">

    <h1><%= "#{@user.first_name}'s" + " Profile" %></h1>

    <%if current_user %>

      <div style="text-align: center"><%= link_to "Account Settings", edit_user_registration_path, class: 'btn btn-primary btn-lg'%></div>
    </div>
  </div>
</div>
<% else %>

<!-- This will list out jobs -->
<table class="table table-hover">
  <tr>
    <th>Job Name</th>
    <th>Description</th>
    <th>Area</th>
  </tr>
  <%@user.jobs.each do |jobz|%>
  <tr>
    <td>
      <%=jobz.name%>
    </td>
    <td>
      <%=jobz.description%>
    </td>
    <td>
      <%=jobz.area%></td>
  </tr>
  <%end%>

</table>
<div style="text-align: center">
  <h2>Your Reviews</h2>
<%@reviews.each do |user_review|%>
<!-- want userz=true because we want reviews about user  -->
<%if user_review.user_id == @user.id && user_review.userz?%>
<%= user_review.title%>
<%= user_review.body%>
<%= user_review.user_id%>
<%= user_review.userz%>
<%end%>
<%end%>
</div>
<%end%>
