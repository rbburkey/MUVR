<div class="jumbotron">
  <div class="profile container">

    <h1><%= "#{@user.first_name}'s" + " Profile"  %></h1>

    <div align="center">
      <P>
        You are signed in as
        <%=current_user.username%>,</p><br>
      <div style="text-align: center"><%= link_to "Account Settings", edit_user_registration_path, class: 'btn btn-primary btn-lg'%></div>
    </div>
  </div>
</div>

<!-- This will list out jobs -->
<table class="table table-hover">
  <tr>
    <th>Job Name</th>
    <th>Description</th>
    <th>Area</th>
  </tr>
  <%@user.jobs.each do |jobz|%>
  <tr>
    <td>
      <%=jobz.name%>
    </td>
    <td>
      <%=jobz.description%>
    </td>
    <td>
      <%=jobz.area%></td>
  </tr>
  <%end%>

</table>
